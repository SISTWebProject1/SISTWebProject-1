<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.reservation.model.reservation-mapper">

	<select id="reservationListData" resultType="RestaurantVO_r">
		SELECT *
		FROM restaurant
	    WHERE no=#{no}
	</select>
	
	<select id="bookingMemberData" resultType="MemberVO_r" parameterType="int">
		SELECT email,pwd  
		FROM member
		WHERE memberid LIKE '%'||#{memberid}||'%'
	</select>
	
	<insert id="bookingResultData" parameterType="ReservationVO"> <!-- ODER MAP -->
		INSERT bookingrestaurant
		INTO VALUES ((SELECT NVL(MAX(bookingnumber)+1,1),#{memberid},#{no},#{reservationdate},#{time},#{inwon})
	</insert>
	

</mapper>